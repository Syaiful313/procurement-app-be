generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  nik          String        @unique
  username     String        @unique
  password     String
  email        String        @unique
  role         Role
  deletedAt    DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  procurements Procurement[]

  @@map("users")
}

enum Role {
  USER
  DIROPS
  MANAGER
  PROCUREMENT
}

model Procurement {
  id             Int               @id @default(autoincrement())
  userId         Int
  user           User              @relation(fields: [userId], references: [id])
  username       String
  description    String
  status         ProcurementStatus @default(WAITING_CONFIRMATION)
  note           String?
  department     Department
  date           DateTime
  itemName       String
  specification  String
  quantity       Int
  unit           String
  trackingStatus TrackingStatus    @default(DRAFT)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@map("procurements")
}

enum ProcurementStatus {
  WAITING_CONFIRMATION
  PRIORITAS
  URGENT
  COMPLEMENT
  REJECTED
}

enum Department {
  PURCHASE
  FACTORY
  OFFICE
}

enum TrackingStatus {
  DRAFT
  MEMO_DIAJUKAN_ADMIN_PR
  APPROVAL_ATASAN_PERTAMA
  APPROVAL_ATASAN_KEDUA
  PENGADAAN_CARI_HARGA
  APPROVAL_MANAGER_KANTOR
  APPROVAL_DIROPS
  PENCETAKAN_PO
  PO_DIKIRIM_KE_VENDOR
  VENDOR_PROSES_PENGIRIMAN
  BARANG_DIKIRIM_VENDOR
  BARANG_DI_GUDANG
}
